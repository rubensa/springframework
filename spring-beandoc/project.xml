<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <artifactId>spring-beandoc</artifactId>
  <name>spring-beandoc</name>
  <groupId>springframework</groupId>
  <currentVersion>0.6.1</currentVersion>
  <organization>
    <name>Darren Davison</name>
    <url>http://opensource.atlassian.com/confluence/spring/display/BDOC/Home</url>
  </organization>
  <inceptionYear>2005</inceptionYear>
  <logo>/images/logo.gif</logo>
  <description>BeanDoc is the tool that facilitates documentation and graphing of Spring bean factories and application context files. Whilst very easy to use, it is designed to be flexible and extensible to meet most needs.</description>
  <url>http://opensource.atlassian.com/confluence/spring/display/BDOC/Home</url>
  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/springframework:spring-beandoc</connection>
    <developerConnection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/springframework:spring-beandoc</developerConnection>
    <url>http://cvs.sourceforge.net/viewcvs.py/springframework/spring-beandoc/</url>
  </repository>
  <versions>
    <version>
      <id>0.6.1</id>
      <name>0.6.1</name>
      <tag>RELEASE_0_6_1</tag>
    </version>
  </versions>
  <developers>
    <developer>
      <name>Darren Davison</name>
      <id>davison</id>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>Apache License Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>manual</distribution>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.6.2</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.9</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring-core</artifactId>
      <version>1.1.5</version>
      <type>jar</type>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <unitTestSourceDirectory>test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*TestSuite.java</include>
        <include>**/*Tests.java</include>
      </includes>
      <excludes>
        <exclude>**/*Abstract*.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>test</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.properties</include>
            <include>**/*.xsl</include>
          </includes>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
          <include>**/*.xsl</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>
