<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean name="/flow.htm" class="org.springframework.webflow.mvc.FlowController">
		<property name="cacheSeconds" value="5"/>
		<property name="flowExecutionManager">
			<bean class="org.springframework.webflow.execution.servlet.ServletFlowExecutionManager">
				<property name="storage">
					<bean class="org.springframework.webflow.execution.servlet.HttpSessionContinuationFlowExecutionStorage"/>
				</property>
				<property name="listener">
					<bean class="org.springframework.webflow.samples.flowlauncher.SampleFlowExecutionListener"/>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="sampleA" class="org.springframework.webflow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/sampleA-flow.xml"/>
	</bean>

	<bean id="sampleB" class="org.springframework.webflow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/sampleB-flow.xml"/>
	</bean>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>