<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean name="/flow.htm" class="org.springframework.webflow.mvc.FlowController">
		<constructor-arg ref="flowExecutionManager"/>
		<property name="cacheSeconds" value="5"/>
	</bean>

	<bean id="flowExecutionManager" class="org.springframework.webflow.execution.FlowExecutionManager">
		<constructor-arg ref="flowLocator"/>
		<property name="listener">
			<bean class="org.springframework.webflow.samples.flowlauncher.SampleFlowExecutionListener"/>
		</property>
	</bean>
	
	<bean id="flowLocator" class="org.springframework.webflow.config.registry.XmlFlowRegistryFactoryBean">
		<property name="definitionLocations">
			<list>
				<value>/WEB-INF/sampleA-flow.xml</value>
				<value>/WEB-INF/sampleB-flow.xml</value>
			</list>
		</property>
	</bean>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>