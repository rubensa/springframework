<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="sampleA" start-state="aPage">

	<view-state id="aPage" view="aPage">
		<transition on="launch-B-as-subflow" to="launchB"/>
		<transition on="end-A-and-launch-B" to="endLaunchB"/>
	</view-state>
	
	<subflow-state id="launchB" flow="sampleB">
		<attribute-mapper bean="mapper"/>
		<transition on="end" to="aPage"/>
	</subflow-state>

	<end-state id="endLaunchB" view="redirect:/flow.htm?_flowId=sampleB&amp;input=${flowScope.input}"/>

	<bean id="mapper" class="org.springframework.webflow.samples.flowlauncher.SampleFlowAttributeMapper"/>
</webflow>