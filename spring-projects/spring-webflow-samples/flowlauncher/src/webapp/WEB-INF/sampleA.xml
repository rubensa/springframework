<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">
	
<flow id="sampleA" start-state="aPage">

	<view-state id="aPage" view="aPage">
		<transition on="launch-B-as-subflow" to="launchB"/>
		<transition on="end-A-and-launch-B" to="endLaunchB"/>
	</view-state>
	
	<subflow-state id="launchB" flow="sampleB">
		<attribute-mapper bean="mapper"/>
		<transition on="end" to="aPage"/>
	</subflow-state>

	<end-state id="endLaunchB" view="redirect:/flowController.htm?_flowId=sampleB&input=${flowScope.input}"/>

</flow>