<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix"><value>/WEB-INF/jsp/</value></property>
		<property name="suffix"><value>.jsp</value></property>
	</bean>

	<bean name="/play.htm" class="org.springframework.webflow.mvc.FlowController"/>
	
	<bean id="numberGuess" class="org.springframework.webflow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/numberGuess-flow.xml"/>
	</bean>

	<bean id="fourDigitNumberGuess" class="org.springframework.webflow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/fourDigitNumberGuess-flow.xml"/>
	</bean>
	
	<!-- a statefull action and it's proxy-->
	<bean id="numberGuessActionProxy" class="org.springframework.webflow.action.StatefulActionProxy">
		<property name="actionId" value="numberGuessAction"/>
	</bean>
	<bean id="numberGuessAction" class="org.springframework.webflow.samples.numberguess.NumberGuessAction" singleton="false"/>

	<bean id="fourDigitNumberGuessAction" class="org.springframework.webflow.samples.numberguess.FourDigitNumberGuessAction"/>

</beans>