<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="mastermind" start-state="enterGuess">
	
	<view-state id="enterGuess" view="mastermind.enterGuess">
		<transition on="submit" to="guess"/>
	</view-state>
	
	<action-state id="guess">
		<!-- access the stateful action via a proxy -->
		<action bean="mastermindGameProxy"/>
		<transition on="invalidInput" to="enterGuess"/>
		<transition on="retry" to="enterGuess"/>
		<transition on="success" to="showAnswer"/>
	</action-state>
	
	<end-state id="showAnswer" view="mastermind.showAnswer"/>

	<bean id="mastermindGameProxy">
		<property name="actionAttribute" value="game"/>	
		<property name="actionId" value="mastermindGame"/>
	</bean>
	
	<bean id="mastermindGame" class="org.springframework.webflow.samples.numberguess.MasterMindGame" singleton="false"/>

</webflow>