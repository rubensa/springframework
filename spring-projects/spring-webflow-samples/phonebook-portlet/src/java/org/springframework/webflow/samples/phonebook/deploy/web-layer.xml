<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- Launches new flow executions and resumes existing executions. -->	
	<bean id="flowExecutionManager" class="org.springframework.webflow.execution.FlowExecutionManager">
		<constructor-arg ref="flowLocator"/>
		<property name="storage">
			<bean class="org.springframework.webflow.execution.ContinuationDataStoreFlowExecutionStorage"/>
		</property>
	</bean>
	
	<!-- Creates the registry of flow definitions for this application. -->
	<bean id="flowLocator" class="org.springframework.webflow.registry.XmlFlowRegistryFactoryBean">
		<property name="flowLocations">
			<list>
				<value>classpath:org/springframework/webflow/samples/phonebook/web/search.xml</value>
			</list>
		</property>
	</bean>

	<!-- Search form action that setups the form and processes form submissions -->
	<bean id="searchFormAction" class="org.springframework.webflow.action.FormAction">
		<property name="formObjectName" value="searchCriteria"/>
		<property name="formObjectClass" value="org.springframework.webflow.samples.phonebook.domain.SearchCriteria"/>
		<property name="formObjectScopeAsString" value="flow"/>
		<property name="validator">
			<bean class="org.springframework.webflow.samples.phonebook.domain.SearchCriteriaValidator"/>
		</property>
	</bean>
	
	<!--
	  Shows how to create a registry populated with programatically built flow definitions
	  To use, point the Phonebook flow controller 'flowLocator' constructor arg at this bean definition.
	 -->
	<bean id="flowLocatorJava" class="org.springframework.webflow.registry.FlowRegistryFactoryBean">
		<property name="flowRegistrars">
			<bean class="org.springframework.webflow.samples.phonebook.web.PhonebookFlowRegistrar"/>
		</property>
	</bean>
	
</beans>