<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- Xml FlowBuilder definition for the search flow -->
	<bean id="searchFlow" class="org.springframework.webflow.config.XmlFlowFactoryBean">
		<property name="location" value="classpath:org/springframework/webflow/samples/phonebook/web/search-flow.xml"/>
	</bean>

	<!-- Search form action that setups the form and processes form submissions -->
	<bean id="searchFormAction" class="org.springframework.webflow.action.FormAction">
		<property name="formObjectName" value="searchCriteria"/>
		<property name="formObjectClass" value="org.springframework.webflow.samples.phonebook.domain.PhoneBookSearchCriteria"/>
		<property name="formObjectScopeAsString" value="flow"/>
		<property name="validator">
			<bean class="org.springframework.webflow.samples.phonebook.domain.PhoneBookSearchCriteriaValidator"/>
		</property>
	</bean>

	<bean id="searchAction" class="org.springframework.webflow.samples.phonebook.web.SearchPhoneBookAction">
		<constructor-arg ref="phoneBook"/>
	</bean>	

	<!-- xml FlowBuilder definition for the detail flow -->
	<bean id="detailFlow" class="org.springframework.webflow.config.XmlFlowFactoryBean">
		<property name="location" value="classpath:org/springframework/webflow/samples/phonebook/web/detail-flow.xml"/>
	</bean>
		
	<!-- Java FlowBuilder definition for the search flow.
	     Uncomment if you wish to plugin this FlowBuilder instead of the xml implementation!
	     (be sure to comment out the xml variant)
	     Notice the consistency: you may plug in any other FlowBuilder implementation in
	     exactly the same fashion -->
	<!--
