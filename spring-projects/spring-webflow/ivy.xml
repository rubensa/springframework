<ivy-module version="1.1">

  <info organisation="springframework" module="spring-webflow" />

  <configurations>
    <conf name="default" extends="global" />
    <conf name="global" visibility="private" />
    <conf name="buildtime" visibility="private" />
    <conf name="test" visibility="private" />
  </configurations>

  <dependencies defaultconf="global->default">
  	<!--  global dependencies -->
    <dependency org="apache" name="commons-codec" rev="1.3"/>
    <dependency org="apache" name="commons-logging" rev="1.0.4"/>
    <dependency org="apache" name="log4j" rev="1.2.9"/>
    <dependency org="ognl" name="ognl" rev="2.7"/>
    <dependency org="springframework" name="spring-beans" rev="1.2.2-dev-20050619"/>
    <dependency org="springframework" name="spring-core" rev="1.2.2-dev-20050619"/>
    <dependency org="springframework" name="spring-context" rev="1.2.2-dev-20050619"/>
    <dependency org="springframework" name="spring-web" rev="1.2.2-dev-20050619"/>
    <dependency org="springframework" name="spring-webmvc" rev="1.2.2-dev-20050619"/>
    <dependency org="springframework" name="spring-mock" rev="1.2.1"/>
    <dependency org="springframework" name="spring-binding" rev="latest.integration"/>

	<!--  build time only dependencies -->
    <dependency org="java" name="servlet" rev="2.4" conf="buildtime->default">
      <artifact name="servlet-api" type="jar" />
    </dependency>
    <dependency org="java" name="jmx" rev="1.2.1" conf="buildtime->default">
      <artifact name="jmx-ri" type="jar" />
    </dependency>
    <dependency org="apache" name="struts" rev="1.2.7" conf="buildtime->default"/>

	<!--  test time only dependencies -->
    <dependency org="easymock" name="easymock" rev="1.1" conf="test->default" />
    <dependency org="junit" name="junit" rev="3.8.1" conf="test->default" />
    <dependency org="cenqua" name="clover" rev="1.3.8" conf="test->default" />

  </dependencies>

</ivy-module>