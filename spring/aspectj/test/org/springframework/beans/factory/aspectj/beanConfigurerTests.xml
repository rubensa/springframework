	<aop:spring-configured/>

	<bean id="beanOne" 
	      class="org.springframework.beans.factory.aspectj.BeanConfigurerTests$ShouldBeConfiguredBySpring"
	      lazy-init="true">
		<property name="name" value="Rod"/>
	</bean>
	
	<bean 
	      class="org.springframework.beans.factory.aspectj.BeanConfigurerTests$ShouldBeConfiguredBySpringUsingTypeNameAsBeanName"
	      lazy-init="true">
	    <property name="name" value="Rob"/>
	</bean>
