<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE application
  PUBLIC '-//Sun Microsystems, Inc.//DTD J2EE Application 1.3//EN'
  'http://java.sun.com/j2ee/dtds/application_1_3.dtd'>

<!-- TODO: In the future you won't have to create a specific
     application.xml in which you have to declare a Cactus test
     war if you don't have a war in your EAR -->
     
<application>
  <display-name>ejbtest</display-name>
  <description>Cactus EJB Sample for J2EE 1.3</description>

  <module>
    <java>aopalliance.jar</java>
  </module>
  <module>
    <java>asm.jar</java>
  </module>
  <module>
    <java>cglib-2.0.jar</java>
  </module>
  <module>
    <java>commons-collections.jar</java>
  </module>
  <module>
    <java>commons-logging.jar</java>
  </module>
  <module>
    <java>dom4j.jar</java>
  </module>
  <module>
    <java>ehcache.jar</java>
  </module>
  <module>
    <java>hibernate2.jar</java>
  </module>
  <module>
    <java>odmg.jar</java>
  </module>
  <module>
    <java>spring.jar</java>
  </module>

  <module>
    <ejb>ejbtest-ejb.jar</ejb>
  </module>
  <module>
    <web>
      <web-uri>ejbtest-cactified.war</web-uri>
      <context-root>/ejbtest</context-root>
    </web>
  </module>

</application>
