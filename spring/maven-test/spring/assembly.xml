<assembly>
  <id>spring</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <includes>
        <include>org.springframework:spring-aop</include>
        <include>org.springframework:spring-aop-tiger</include>
        <include>org.springframework:spring-beans</include>
        <include>org.springframework:spring-beans-tiger</include>
        <include>org.springframework:spring-context</include>
        <include>org.springframework:spring-core</include>
        <include>org.springframework:spring-dao</include>
        <include>org.springframework:spring-dao-tiger</include>
        <include>org.springframework:spring-jdbc</include>
        <include>org.springframework:spring-jdbc-tiger</include>
        <include>org.springframework:spring-remoting</include>
        <include>org.springframework:spring-support</include>
        <include>org.springframework:spring-support-tiger</include>
        <include>org.springframework:spring-web</include>
        <include>org.springframework:spring-webmvc</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>