<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>

	<form-beans>
		<!-- A single ActionForm adapter for your entire app is all you need, if you
			 wish to take advantage of Spring's POJO-based data binding and validation. -->
		<form-bean name="actionForm" type="org.springframework.web.struts.SpringBindingActionForm"/>
	</form-beans>

	<global-forwards>
		<forward name="displayAge"	path="/WEB-INF/jsp/displayAge.jsp"/>
		<forward name="enterBirthDate" path="/WEB-INF/jsp/enterBirthDate.jsp"/>
	</global-forwards>

	<action-mappings>

		<action path="/home" forward="/WEB-INF/index.jsp"/>
		
		<!-- flow actions -->
		<action path="/birthDate" name="actionForm" scope="request"
				type="org.springframework.web.flow.struts.FlowAction"
				className="org.springframework.web.flow.struts.FlowActionMapping">
			<set-property property="flowId" value="birthDate"/>
		</action>

	</action-mappings>

	<message-resources parameter="org.springframework.samples.birthdate.MessageResources"/>

</struts-config>
