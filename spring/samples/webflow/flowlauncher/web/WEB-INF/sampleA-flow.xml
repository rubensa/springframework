<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="sampleA" start-state="aPage">

	<view-state id="aPage" view="aPage">
		<transition on="launchBAsSubFlow" to="launchB"/>
		<transition on="endAAndLaunchB" to="endLaunchB"/>
	</view-state>
	
	<subflow-state id="launchB" flow="sampleB">
		<attribute-mapper class="org.springframework.samples.flowlauncher.SampleFlowAttributeMapper"/>
		<transition on="end" to="aPage"/>
	</subflow-state>

	<end-state id="endLaunchB" view="redirect:/flow.htm?_flowId=sampleB"/>

</webflow>