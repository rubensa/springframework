<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="itemList" start-state="itemList.view">

	<view-state id="itemList.view" view="itemList.view">
		<transition on="add" to="item.create"/>
	</view-state>

	<action-state id="item.create">
		<action bean="item.create"/>
		<transition on="success" to="item.view"/>
	</action-state>
	
	<view-state id="item.view" view="item.view">
		<transition on="submit" to="item.add"/>
	</view-state>
	
	<action-state id="item.add">
		<action bean="item.add"/>
		<transition on="*" to="itemList.view"/>
	</action-state>
	
</webflow>