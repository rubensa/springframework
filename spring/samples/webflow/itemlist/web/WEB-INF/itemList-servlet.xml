<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix"><value>/WEB-INF/jsp/</value></property>
		<property name="suffix"><value>.jsp</value></property>
	</bean>

	<bean id="frontController" name="/itemList.htm" class="org.springframework.web.flow.mvc.FlowController">
		<property name="cacheSeconds"><value>0</value></property>
		 <!-- serialize all operations within a session -->
		<property name="synchronizeOnSession"><value>true</value></property>
		<property name="flow"><ref bean="ItemList"/></property>
	</bean>
	
	<bean id="ItemList" class="org.springframework.web.flow.config.FlowFactoryBean">
		<property name="flowBuilder">
			<bean class="org.springframework.web.flow.config.XmlFlowBuilder">
				<property name="resource"><value>/WEB-INF/itemList-flow.xml</value></property>
			</bean>
		</property>
	</bean>

	<bean id="item.create" class="org.springframework.samples.itemlist.web.flow.NewItemAction"/>
	
	<bean id="item.add" class="org.springframework.samples.itemlist.web.flow.AddItemAction"/>
	
</beans>
