<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean name="/itemList.htm" class="org.springframework.web.flow.mvc.FlowController">
		 <!-- serialize all operations within a session -->
		<property name="synchronizeOnSession" value="true"/>
		<property name="flow" ref="itemList"/>
	</bean>
	
	<bean id="itemList" class="org.springframework.web.flow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/itemList-flow.xml"/>
	</bean>

	<bean id="item.create" class="org.springframework.samples.itemlist.NewItemAction"/>
	
	<bean id="item.add" class="org.springframework.samples.itemlist.AddItemAction"/>
	
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
		
</beans>