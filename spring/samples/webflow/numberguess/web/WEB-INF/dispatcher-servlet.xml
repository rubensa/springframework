<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix"><value>/WEB-INF/jsp/</value></property>
		<property name="suffix"><value>.jsp</value></property>
	</bean>

	<bean name="/play.htm" class="org.springframework.web.flow.mvc.FlowController"/>

	<bean id="numberGuess" class="org.springframework.web.flow.config.XmlFlowFactoryBean">
		<property name="location" value="/WEB-INF/numberGuess-flow.xml"/>
	</bean>

	<bean id="fourDigitNumberGuess" class="org.springframework.web.flow.config.FlowFactoryBean">
		<property name="location" value="/WEB-INF/fourDigitNumberGuess-flow.xml"/>
	</bean>
	
	<bean id="numberGuessAction" class="org.springframework.samples.numberguess.NumberGuessAction"/>

	<bean id="fourDigitNumberGuessAction" class="org.springframework.samples.numberguess.FourDigitNumberGuessAction"/>

</beans>