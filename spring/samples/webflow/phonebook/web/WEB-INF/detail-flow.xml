<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-flow PUBLIC "-//SPRING//DTD WEB FLOW//EN"
	"http://www.springframework.org/dtd/web-flow.dtd">

<web-flow id="person.Detail" start-state="detail.get">

	<action-state id="detail.get">
		<action bean="person.Detail.get"/>
		<transition event="success" to="detail.view"/>
		<transition event="error" to="error"/>
	</action-state>

	<view-state id="detail.view" view="person.Detail.view">
		<transition event="back" to="finish"/>
		<transition event="select" to="colleagueId.set"/>
	</view-state>

	<action-state id="colleagueId.set">
		<action bean="person.Detail.colleagueId.set"/>
		<transition event="success" to="colleague.Detail"/>
		<transition event="error" to="error"/>
	</action-state>
	
	<sub-flow-state id="colleague.Detail" flow="person.Detail" model-mapper="colleagueId.modelMapper">
		<transition event="finish" to="detail.get"/>
		<transition event="error" to="error"/>
	</sub-flow-state>
	
	<end-state id="finish"/>
	<end-state id="error" view="error.view"/>
	
</web-flow>