<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix"><value>/WEB-INF/jsp/</value></property>
		<property name="suffix"><value>.jsp</value></property>
	</bean>
	
	<!-- search flow beans -->

	<bean id="searchFrontController" name="/search.htm" class="org.springframework.web.flow.mvc.FlowController">
		<property name="cacheSeconds"><value>0</value></property>
		<property name="flow"><ref bean="person.Search"/></property>
	</bean>
	
	<!-- xml flow builder definition for the search flow -->
	<!--
	<bean id="person.Search" class="org.springframework.web.flow.config.FlowFactoryBean">
		<property name="flowBuilder">
			<bean class="org.springframework.web.flow.config.XmlFlowBuilder">
				<property name="resource"><value>/WEB-INF/search-flow.xml</value></property>
			</bean>
		</property>
	</bean>
	-->
	
	<!-- java flow builder definition for the search flow -->
	<bean id="person.Search" class="org.springframework.web.flow.config.FlowFactoryBean">
		<property name="flowBuilder">
			<bean class="org.springframework.samples.phonebook.web.flow.SearchPersonFlowBuilder"/>
		</property>
	</bean>
	
	<bean id="person.Search.criteria.bindAndValidate" class="org.springframework.web.flow.action.BindAndValidateAction">
		<property name="formObjectName"><value>query</value></property>
		<property name="formObjectClass"><value>org.springframework.samples.phonebook.domain.PhoneBookQuery</value></property>
		<property name="validator">
			<bean id="queryValidator" class="org.springframework.samples.phonebook.domain.PhoneBookQueryValidator"/>
		</property>
	</bean>

	<bean id="person.Search.query" class="org.springframework.samples.phonebook.web.flow.action.QueryAction">
		<property name="phoneBook"><ref bean="phoneBook"/></property>
	</bean>

	<bean id="person.Search.id.set" class="org.springframework.web.flow.action.SetAction">
		<property name="mapping"><value>id,java.lang.Long</value></property>
	</bean>

	<bean id="id.modelMapper" class="org.springframework.web.flow.support.ParameterizableFlowModelMapper">
		<property name="inputMappings">
			<list>
				<value>id</value>
			</list>
		</property>
	</bean>
	
	<!-- detail flow beans -->

	<bean id="detailFrontController" name="/detail.htm" class="org.springframework.web.flow.mvc.FlowController">
		<property name="cacheSeconds"><value>0</value></property>
		<property name="flow"><ref bean="person.Detail"/></property>
	</bean>

	<!-- xml flow builder definition for the detail flow -->
	<!--
	<bean id="person.Detail" class="org.springframework.web.flow.config.FlowFactoryBean">
		<property name="flowBuilder">
			<bean class="org.springframework.web.flow.config.XmlFlowBuilder">
				<property name="resource">
					<value>/WEB-INF/detail-flow.xml</value>
				</property>
			</bean>
		</property>
	</bean>
	-->
	
	<!-- java flow builder definition for the detail flow -->
	<bean id="person.Detail" class="org.springframework.web.flow.config.FlowFactoryBean">
		<property name="flowBuilder">
			<bean class="org.springframework.samples.phonebook.web.flow.PersonDetailFlowBuilder" autowire="byType"/>
		</property>
	</bean>

	<bean id="person.Detail.get" class="org.springframework.samples.phonebook.web.flow.action.GetPersonAction" autowire="byType">
		<property name="phoneBook"><ref bean="phoneBook"/></property>
	</bean>

	<bean id="formatter.locator" class="org.springframework.binding.format.support.ThreadLocalFormatterRegistry"/>

	<bean id="converter.locator" class="org.springframework.binding.convert.support.DefaultConverterLocator" autowire="byType"/>
	
	<bean id="person.Detail.colleagueId.set" class="org.springframework.web.flow.action.SetAction">
		<property name="mappingsMap">
			<map>
				<entry key="id"><value>colleagueId,java.lang.Long</value></entry>
			</map>
		</property>
	</bean>

	<bean id="colleagueId.modelMapper" class="org.springframework.web.flow.support.ParameterizableFlowModelMapper">
		<property name="inputMappings">
			<map>
				<entry key="colleagueId"><value>id</value></entry>
			</map>
		</property>
	</bean>
	
</beans>