<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	Common bean definitions for EnterpriseServices
	tests.
-->
<beans>

	<bean id="txManager"
		class="org.springframework.enterpriseservices.TestTxManager">
	</bean>
	
	
	<bean id="auto_txAdvice"
		class="org.springframework.enterpriseservices.MetadataTransactionAroundAdvisor">
		<property name="transactionManager"> <ref bean="txManager"/></property>
		<property name="attributes"><ref bean="attributes"/></property>
	</bean>
	
	
	<bean id="txClass"
		class="org.springframework.enterpriseservices.TxClass">
	</bean>
	
	<bean id="txClassWithClassAttribute" singleton="false"
		class="org.springframework.enterpriseservices.TxClassWithClassAttribute">
	</bean>
	
	<bean id="noProxy"
		class="org.springframework.beans.TestBean">
	</bean>
	
	
	
	<!--
		Must NOT be a singleton. Used in stateful introductions.
	-->
	<bean id="auto_modifiableAdvice"
		class="org.springframework.enterpriseservices.mod.ModifiableAdvice"
		singleton="false"
	>
		<property name="attributes"><ref bean="attributes"/></property>
	</bean>
	
	<bean id="modifiable1"
		class="org.springframework.enterpriseservices.mod.ModifiableTestBean" />

	
	<bean id="modifiable2"
		class="org.springframework.enterpriseservices.mod.ModifiableTestBean" />
	

</beans>		
	
	