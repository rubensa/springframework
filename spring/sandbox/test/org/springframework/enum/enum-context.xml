<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean  id="enumResolver" 
  	    class="org.springframework.enum.support.CachingJdbcCodedEnumResolver">
  	    <property name="dataSource"><ref bean="dataSource"/></property>
  	    <property name="typeMappings">
  	    	<map>
  	    		<entry key="gender">
  	    			<bean class="org.springframework.enum.TypeMapping">
  	    				<property name="enumClass">
  	    					<value>org.springframework.enum.Gender</value>
  	    				</property>
  	    			</bean>
  	    		</entry>
  	    	</map>
  	    </property>
  	</bean>

	<bean id="dataSource" class="com.mockobjects.sql.MockDataSource"/>  	
</beans>