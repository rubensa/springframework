<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!-- used for testing attributes and multiple view resolvers -->

	<mvc:view-resolvers>
		<mvc:internal-resource-view-resolver
			type="tiles-jstl" prefix="/WEB-INF/jsp/" suffix=".jsp"
			request-context-attribute="requestContext"
			redirect-context-relative="false"
			redirect-http10-compatible="false"
			content-type="text/html"
			enable-caching="false"/>
	</mvc:view-resolvers>

</beans>