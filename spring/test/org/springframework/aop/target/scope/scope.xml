<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="scopedBean"
        class="org.springframework.aop.target.scope.ScopedProxyFactoryBean">
		
		<!-- <property name="sessionKey" value="sessionKey" /> -->
		<property name="targetBeanName" value="_scopedBean" /> 
		<property name="scopeMap">
			<bean class="org.springframework.aop.target.scope.ScopedTargetSourceTests$HashMapScopeMap" />
		</property>
		<property name="scopeIdentifierResolver">
			<bean class="org.springframework.aop.target.scope.ScopedTargetSourceTests$MapScopeIdentiferResolver" />
		</property>
    </bean>
	
	<bean id="_scopedBean" singleton="false" 
		class="org.springframework.beans.TestBean" />
  
</beans>
