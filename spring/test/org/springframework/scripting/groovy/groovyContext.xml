<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="staticScriptFactory" class="org.springframework.scripting.groovy.GroovyScriptFactory">
        <property name="enableRefresh" value="false" />
    </bean>

    <bean id="refreshingScriptFactory" class="org.springframework.scripting.groovy.GroovyScriptFactory"/>

    <bean id="calculator" factory-bean="staticScriptFactory" factory-method="createObject">
        <constructor-arg index="0" value="classpath:org/springframework/scripting/groovy/Calculator.groovy" />
    </bean>

    <bean id="messenger" factory-bean="refreshingScriptFactory" factory-method="createObject">
        <constructor-arg index="0" value="classpath:org/springframework/scripting/groovy/Messenger.groovy" />
        <property name="message" value="Hello World!" />
    </bean>
</beans>