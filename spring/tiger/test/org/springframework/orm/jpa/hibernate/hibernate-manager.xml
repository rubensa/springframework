<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="entityManagerFactory" class="org.springframework.orm.jpa.ContainerEntityManagerFactoryBean">
		<property name="persistenceXmlLocation" value="org/springframework/orm/jpa/hibernate/persistence.xml"/>
		<property name="allowRedeploymentWithSameName" value="true"/>
		<property name="dataSource" ref="dataSource"/>
		<property name="loadTimeWeaver" ref="weaver"/>
	</bean>

	<bean id="jpaDialect" class="org.springframework.orm.jpa.support.HibernateJpaDialect"/>

</beans>
